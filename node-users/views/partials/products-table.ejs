<table class="table">
  <thead>
    <tr>
      <th>SKU</th>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.sku %></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td>
          <a href="/products/<%= product._id %>" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i>
          </a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>