<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user=> { %>
            <tr>
                <td>
                    <%= user.name %>
                </td>
                <td>
                    <%= user.surname %>
                </td>
                <td>$<%= user.email %>
                </td>
                <td>$<%= user.address %>
                </td>
                <td>
                    <a href="/users/<%= user._id %>" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>